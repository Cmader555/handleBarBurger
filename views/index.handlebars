<div class="container">
    <div class="container d-flex justify-content-center burgaTop">
        <div class="row">
            <div class="col-sm">
                <h1>Eat Da Burger!</i></h1>
            </div>
        </div>
    </div>
    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="col-sm">
                <div id="lettuce"></div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h2>Burgers waiting to be devoured!</h2>

                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li class="waiting">
                        <span>
                            {{this.burger_name}}
                        </span>
                        <button type="button" class="eatBurger btn btn-outline-light" id="eatButton" data-id="{{this.id}}">Eat
                            me! <i class="fas fa-utensils"></i></button>

                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-sm">
                <h2>Burgers that have been devoured!</h2>

                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li class="eaten">
                        <span id="eatenSpan">
                            {{this.burger_name}}
                        </span>

                    </li>
                    {{/if}}
                    {{/each}}
                </ul>

            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center burgaBottom">
        <div class="row">
            <div class="col-sm">
                <h2>Add a burger</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="burga">Burger:</label>
                        <input type="text" id="burga" name="name">
                    </div>
                    <button type="submit" class="btn btn-outline-light">Add Burger <i class="fas fa-hamburger"></i></button>
                    <button type="button" class="btn btn-outline-light" id="deleteButton">Start Over <i class="fas fa-power-off"></i></button>
                </form>

            </div>
        </div>
    </div>

</div>